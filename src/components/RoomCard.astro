---
interface Props {
  title: string;
  price: number;
  image?: string;
  features: string[];
}

const { title, price, image, features } = Astro.props;
---

<div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow duration-300">
  {image && (
    <img 
      src={image} 
      alt={title} 
      class="w-full h-48 object-cover"
    />
  )}
  <div class="p-6">
    <div class="flex justify-between items-start">
      <h3 class="text-xl font-bold text-primary font-serif">{title}</h3>
      <span class="text-xl font-bold text-accent">${price}<span class="text-sm font-normal text-text/80">/noche</span></span>
    </div>
    
    <ul class="mt-4 space-y-2">
      {features.map((feature) => (
        <li class="flex items-center text-text/80">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          {feature}
        </li>
      ))}
    </ul>
    
    <button class="mt-6 w-full bg-primary hover:bg-primary/90 text-white font-medium py-2 px-4 rounded-lg transition duration-300">
      Reservar Ahora
    </button>
  </div>
</div>